<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
		
	<bean id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:extraclient.properties</value>
		</property>
	</bean>

	<bean id="queryController"
		class="de.extra.client.plugins.queryplugin.controller.QueryPluginController">
		<constructor-arg index="0" ref="queryHelper" />
		<constructor-arg index="1" value="${startId}" />
		<constructor-arg index="2" value="${packageLimit}" />
	</bean>

	<bean id="queryHelper" class="de.extra.client.plugins.queryplugin.helper.QueryHelper" />
</beans>