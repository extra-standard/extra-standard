<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
          "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="clientCore" class="de.extra.client.core.ClientCore">
		<constructor-arg index="0" ref="dataPlugin" />
		<constructor-arg index="1" ref="configPlugin" />
		<constructor-arg index="2" ref="outputPlugin" />
		<constructor-arg index="3" ref="namespacePrefixMapper" />
		<constructor-arg index="4" ref="requestHelper" />
	</bean>

	<bean id="requestHelper" class="de.extra.client.core.helper.RequestHelper">
		<constructor-arg index="0" ref="pluginHelper" />
		<constructor-arg index="1" ref="headerHelper" />
		<constructor-arg index="2" ref="bodyHelper" />
		<constructor-arg index="3" value="${extraProfile}" />
	</bean>

	<bean id="pluginHelper" class="de.extra.client.core.helper.BuildPluginHelper">
	</bean>

	<bean id="headerHelper" class="de.extra.client.core.helper.BuildHeaderHelper">
	</bean>

	<bean id="bodyHelper" class="de.extra.client.core.helper.BuildBodyHelper">
	</bean>

	<bean id="namespacePrefixMapper" class="de.drv.dsrv.extra.marshaller.NamespacePrefixMapper">
		<property name="mappings">
			<props>
				<prop key="http://www.extra-standard.de/namespace/response/1">xres</prop>
				<prop key="http://www.extra-standard.de/namespace/request/1">xreq</prop>
				<prop key="http://www.extra-standard.de/namespace/components/1">xcpt</prop>
				<prop key="http://www.w3.org/2001/04/xmlenc#">xenc</prop>
				<prop key="http://www.w3.org/2000/09/xmldsig#">ds</prop>
				<prop key="http://www.extra-standard.de/namespace/logging/1">xlog</prop>
				<prop key="http://www.extra-standard.de/namespace/plugins/1">xplg</prop>
				<prop key="http://www.extra-standard.de/namespace/message/1">xmsg</prop>
			</props>
		</property>
	</bean>
</beans>